@model LibraryManagementSystem.Model.Model.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!----h2 style="margin-left:50px;">Login</h2-->

@using (Html.BeginForm(Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    <div style="width:650px; margin-left:250px; margin-top:100px;" class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">Login</div>
            </div>
            <div class="panel-body">
                <div class="form-group row">
                    @if (ViewBag.FMsg != null)
                    {
                        <p style="color: red;  margin-left:10px; font-weight: bolder">@(ViewBag.FMsg)</p>
                    }


                </div>
                <div class="form-group row">
                    @Html.Label("Username", "Username *", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.UserName, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.UserName, null, new { @class = "text-danger" })
                    </div>

                </div>


                <div class="form-group row">
                    @Html.Label("Password", "Password *", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.PasswordFor(c => c.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Password, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-md-4 pull-right col-md-offset-4">
                    <input type="submit" class="btn btn-success" value="Login" />
                </div>
            </div>
        </div>


    </div>

}


@section scripts
{
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


}


